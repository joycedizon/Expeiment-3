#include<iostream>
#include<conio.h>
#include<string.h>
using namespace std;

int main ()
{

	int size, x, y, z;
	char in[100];
	
	cout << "Enter any combination of characters: ";
	cin >> in;
	
	size = strlen(in);
	
	for (x=0; x<size; x++)
	{
		for (y=x+1; y<size; y++)
		{
			if (in[x] > in[y])
			{
				z = in[x];
				in[x]=in[y];
				in[y]=z;
				
			}
		}
	}
    	
    cout << "\n" << endl;
    	
    for (x=0 ; x<= size ; x++)
    {
        cout << in[x] << ' ';
    }
    
    cout << "\n\nThe size of array is: " << size;
    
	getch();
	return 0;	
}

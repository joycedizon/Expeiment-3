#include<iostream>
#include<conio.h>
#include<string.h>

using namespace std;

int main ()
{

	int size, x, y;
	char in[100], out[100];
	
	cout << "Enter any combination of characters: ";
	cin >> in;
	
	size = strlen(in);
	
	for (x=0, y=size; x<=size; x++, y--)
	{
		out[y]=in[x];
	}
    	
 	cout << "\n";
    	
	for (x=0 ; x<= size ; x++)
	{
		cout << out[x] << ' ';
	}
    
    	cout << "\nThe size of array is: " << size;
    
	getch();
	return 0;	
}
